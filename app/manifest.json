{
  "name": "Daydream",
  "version": "1.0.0",
  "manifest_version": 2,
  "description": "A chrome extension to record your actions into a nightmare script.",
  "permissions": [
    "webNavigation",
    "tabs",
    "*://*/"
  ],
  "browser_action": {
    "default_icon": "images/icon-black.png"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "commands": {
    "detect-screenshot": {
      "suggested_key": {
        "default": "Ctrl+Shift+3"
      },
      "description": "Detect a screenshot",
      "global": true
    }
  }
}
