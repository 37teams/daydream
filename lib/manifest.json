{
  "name": "Daydream",
  "version": "1.0.0",
  "manifest_version": 2,
  "description": "A chrome extension to record your actions into a nightmare script.",
  "omnibox": { "keyword" : "daydream" },
  "permissions": [
    "tabs",
    "*://*/"
  ],
  "browser_action": {
    "default_icon": "images/icon-black.png"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  }
}
